  ],
  "author": "Catstail <maeltm18@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/maeltm/node-gamecenter-identity-verifier/issues"
  },
  "homepage": "https://github.com/maeltm/node-gamecenter-identity-verifier#readme",
  "devDependencies": {
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.11",
    "coveralls": "^2.11.9",
    "istanbul": "^0.4.3",
    "jshint": "^2.9.1",
    "mocha": "^9.1.3",
    "nock": "^13.2.1"
  }
}
